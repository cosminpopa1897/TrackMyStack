<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trackmystack.popacosmin.trackmystack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TransactionActivity"/>
        <activity android:name=".CreateProductActivity"/>
        <activity android:name=".CreateShopActivity"/>
        <activity android:name=".ShopsActivity"/>
        <activity android:name=".ProductIndexActivity"/>
        <activity android:name=".DisplayTransactionActivity"/>
        <activity android:name=".DisplayShopActivity"/>
        <activity android:name=".DisplayProductActivity"/>
        <activity android:name=".DisplayStockItemActivity"/>
    </application>

</manifest>