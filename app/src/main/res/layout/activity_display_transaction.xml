<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/display_transaction_label_TransactionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Name:" />

    <TextView
        android:id="@+id/display_transaction_textView_TransactionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Transaction Name" />

    <TextView
        android:id="@+id/display_transaction_Label_ReceiverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiver Name:" />

    <TextView
        android:id="@+id/display_transaction_TextView_ReceiverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Receiver Name" />

    <TextView
        android:id="@+id/display_transaction_label_SenderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender Name:" />

    <TextView
        android:id="@+id/display_transaction_textView_SenderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Sender Name" />

    <TextView
        android:id="@+id/display_transaction_label_DateSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Sent:" />

    <TextView
        android:id="@+id/display_transaction_textView_DateSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Date Sent" />

    <TextView
        android:id="@+id/display_transaction_label_DateReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Received:" />

    <TextView
        android:id="@+id/display_transaction_textView_DateReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Date Received" />

    <TextView
        android:id="@+id/display_transaction_label_Quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity:" />

    <TextView
        android:id="@+id/display_transaction_textView_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07" />

    <Button
        android:id="@+id/display_transaction_button_editTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Transaction" />

    <Button
        android:id="@+id/display_transaction_button_deleteTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Transaction" />
</LinearLayout>